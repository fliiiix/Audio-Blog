<% if !admin?; halt 401; end%> 
<div><%= @meldung %></div>
<form action="/add/music" method="post" enctype="multipart/form-data">
	<h1>Add a Song</h1>
	<input type="text" name="title" placeholder="Titel" value="<%= @title if @title %>" class="input-block-level">
	<textarea name="description" class="input-block-level" rows="15"><%= @mdtext if @mdtext %></textarea>
	<input name="soundSample" type="file"><br>
	<input type="submit" value="Speichern" id="submit" class="btn btn-primary pull-right">
</form>