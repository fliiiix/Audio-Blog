<% if !admin?; halt 401; end%> 
<div><%= @meldung %></div>
<form action="/add/music" method="post" enctype="multipart/form-data">
	<h1>Add a Song</h1>
	<input type="text" name="title" placeholder="Titel" class="input-block-level"><br>
	<textarea name="description" class="input-block-level" rows="15"></textarea>
	<input name="soundSample" type="file"><br>
	<input type="submit" value="Speichern" id="submit" class="btn btn-primary pull-right">
</form>