<% if admin? %>
  <div class="block">
    <% if SoundCloudToken.first == nil %>
      <aside>
        Hey you there is no souncloud account fix that fast: 
        <a href='/auth' class="pure-button"><i class='icon-soundcloud'></i> connect</a>
      </aside>
    <% end %>
    <% if @element != "music" && @element != "text" && @element != "video" %>
      <%= erb :createNew %>
    <% end %>
    <% if @element == "music" %>
      <%= erb :addMusic %>
    <% end %>
    <% if @element == "text" %>
      <%= erb :addText %>
    <% end %>
    <% if @element == "video" %>
      <%= erb :addVideo %>
    <% end %>
  </div>
<% end %>

<% if @posts %>
  <% @posts.each do |post| %>
    <div style="background-color: <%= (post.publish? ? "white" : "silver")%>;" class="block">
      <h1 class="pull-left"><%= post.title %></h1>
      <% if admin? %>
        <a class="pull-right" href="/publish/<%= post.id %>"><%= (post.publish? ? "un" : "")%>publish</a>
      <% end %>
      <div style="clear:both;">
        <%= Maruku.new(post.text).to_html.byteslice(0, 1000) %>
      </div>
      <%= post.embedded if post._type == "MusicPost" %>
      <%= post.embedded if post._type == "VideoPost"%>
      <a href="/<%= post.url.nice %>">read more</a>
    </div>
  <% end %>
<% end %>

<% if @post %>
  <div style="background-color: <%= (@post.publish? ? "white" : "silver")%>;" class="block">
    <h1 class="pull-left"><%= @post.title %></h1>
    <% if admin? %>
      <a class="pull-right" href="/publish/<%= @post.id %>"><%= (@post.publish? ? "un" : "")%>publish</a>
    <% end %>
    <div class="clear">
      <%= Maruku.new(@post.text).to_html%>
    </div>
    <%= @post.embedded if @post._type == "MusicPost" %>
    <%= @post.embedded if @post._type == "VideoPost"%>
    <a href="/<%= @post.url.nice %>">read more</a>
  </div>
<% end %>
<div id="paging" style="margin-bottom:20px;">
  <a href="/page/1" class="pure-button">Back</a>
  <a href="/page/2" class="pure-button">Next</a>
</div>