<% if admin? %>
  <div class="block">
    <% if SoundCloudToken.first == nil %>
      <aside>
        Hey you there is no souncloud account fix that fast: 
        <a href='/auth' class="pure-button"><i class='icon-soundcloud'></i> connect</a>
      </aside>
    <% end %>
    <% if @element != "music" && @element != "text" && @element != "video" %>
      <%= erb :createNew %>
    <% end %>
    <% if @element == "music" %>
      <%= erb :addMusic %>
    <% end %>
    <% if @element == "text" %>
      <%= erb :addText %>
    <% end %>
    <% if @element == "video" %>
      <%= erb :addVideo %>
    <% end %>
  </div>
<% end %>

<% if @posts %>
  <% @posts.each do |post| %>
    <div style="background-color: <%= (post.publish? ? "white" : "silver")%>;" class="block">
      <h1 class="pull-left"><%= post.title %></h1>
      <%= erb :adminPostControl, :locals => {:post => post} if admin? %>
      <div style="clear:both;">
        <%= Maruku.new(post.text).to_html.byteslice(0, 1000) %>
      </div>
      <%= post.embedded if post._type == "MusicPost" %>
      <%= post.embedded if post._type == "VideoPost"%>
      <a href="/<%= post.url.nice %>">read more</a>
    </div>
  <% end %>
<% end %>

<% if @post %>
  <div style="background-color: <%= (@post.publish? ? "white" : "silver")%>;" class="block">
    <h1 class="pull-left"><%= @post.title %></h1>
    <%= erb :adminPostControl, :locals => {:post => @post} if admin? %>
    <div class="clear">
      <%= Maruku.new(@post.text).to_html%>
    </div>
    <%= @post.embedded if @post._type == "MusicPost" %>
    <%= @post.embedded if @post._type == "VideoPost"%>
  </div>
<% end %>

<% if @postPagesTotal != nil && @postPagesTotal > 1 %>
  <div id="paging" class="block" style="margin-bottom:20px;">
    <center>
      <% if @pageId > 1 %>
        <a href="/page/<%= @pageId -1 %>" class="pure-button"><i class="icon-arrow-left"></i> Back</a>
      <% end %>

      <% (1..@postPagesTotal).each do |i| %>
        <% if i != @pageId %>
          <a href="/page/<%= i %>"><%= i %></a>
        <% else %>
          <span><%= i %></span>
        <% end %>
      <% end %>
      
      <% if @postPagesTotal > @pageId %>
        <a href="/page/<%= @pageId + 1 %>" class="pure-button">Next <i class="icon-arrow-right"></i></a>
      <% end %>
    </center>
  </div>
<% end %>